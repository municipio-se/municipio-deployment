# License key for Advanced Custom Fields PRO WordPress plugin.
MUNICIPIO_ACF_PRO_KEY=
# GitHub token with permission to read packages.
MUNICIPIO_GITHUB_TOKEN=

# Local site domain (default: localhost:8443)
# Can be a port-based URL (localhost:8443) or a custom domain (dev.example.com)
LOCAL_SITE_DOMAIN=localhost:8443

# Local site port - the host port mapped to container's port 443 (default: 8443)
# Note: If you change this, you must also update forwardPorts in devcontainer.json
LOCAL_SITE_PORT=8443

# Migration Script Configuration
# Remote server SSH connection
SSH_PORT=3022
REMOTE_SSH=ubuntu@example.com
REMOTE_PATH=/var/www/prod

# Remote site details
REMOTE_SITE_PROTOCOL=https://
REMOTE_SITE_DOMAIN=example.com
REMOTE_PREFIX=wp_

# Local site configuration
LOCAL_SITE_SLUG=mysite