// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php-mariadb
{
	"name": "Municipio Deployment(PHP & MariaDB)",
	"dockerComposeFile": "docker-compose.yml",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"service": "app",
	"forwardPorts": [
		"443:8443",
		8306,
		8080
	],
	"containerEnv": {
		"XDEBUG_MODE": "off"
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
		"symlink-to-served-folder": "sudo chmod a+x \"$(pwd)\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)\" /var/www/html",
		"symlink-npmrc-to-user-catalog": "ln -s \"$(pwd)/.devcontainer/config/.npmrc\" ~/.npmrc",
		"add-github-token-to-composer": "composer config github-oauth.github.com $MUNICIPIO_GITHUB_TOKEN",
		"start-apache": "sudo service apache2 start"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "16"
		}
	},
	// "waitFor": "postCreateCommand",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"ritwickdey.liveserver",
				"ms-vscode.remote-server",
				"cjhowe7.laravel-blade",
				"github.vscode-github-actions",
				"valeryanm.vscode-phpsab"
			],
			"settings": {
				"remote.autoForwardPorts": false,
				"remote.portsAttributes": {
					"443:8443": {
						"label": "WordPress - SSL",
						"onAutoForward": "notify",
						"requireLocalPort": true,
						"protocol": "https"
					},
					"8306": {
						"label": "Database",
						"onAutoForward": "notify",
						"requireLocalPort": false
					},
					"8080": {
						"label": "PhpMyAdmin",
						"onAutoForward": "notify",
						"requireLocalPort": false
					}
				},
				"intelephense.environment.includePaths": [
					"/tmp/wordpress-tests-lib",
					"/tmp/wordpress"
				],
				"intelephense.environment.phpVersion": "8.3"
			}
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}